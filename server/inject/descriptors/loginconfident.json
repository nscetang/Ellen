{
  "type": "object",
  "comment": "Login",
  "properties": {
    "username": {
      "type": "string",
      "label": "username",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "[name=\"username\"]",
      "control": "text"
    },
    "password": {
      "type": "string",
      "label": "password",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "control": "text",
      "selector": "[name=\"password\"]"
    },
    "errorMessage": {
      "type": "string",
      "label": "errorMessage",
      "update": {
        "type": "none"
      }
    },
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": ".button[value=\"Login\"]",
      "control": "action:button"
    },
    "isLogin": {
      "type": "identifier",
      "selector": ".button",
      "control": "exists"
    }
  },
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "action": "submit"
    }
  ]
}
